{{! 
Це код container файлу для index сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
 }}


    
      <header class='header'>
       <div class="header_logo">
         {{> logo}}
       </div>
        <nav class='header_nav'>
          <div class="header_nav_right">
            {{>nav list=header}}
          </div>
        </nav>
      </header>
      
    {{#with hero}}
      <div class="hero">
        <div class="hero_content">
          <h1 class="hero_title">{{title}}</h1>
          <p class="hero_text">{{text}}</p>
        </div>
        <img src="{{photo}}" alt="random image" class="hero_image">
      </div>
    {{/with}}

    <main class="blog">
      {{#each blog}}
        {{> cardBlog }}
      {{/each}}
    </main>

    {{#with form}}
    <div class="form">
      <div class="form_content">
        <h3 class="form_title">{{title}}</h3>
        <p class="form_text">{{info}}</p>
      </div>
      <div class="form_action">
        <a href="{{href}}" class="button form_button">{{button}}</a>
      </div>
    </div>
    {{/with}}
    
    <footer class="footer">      
      <div class="footer_logo">
        {{> logo}}
        <span class="footer_copyright">Copyright 2023-2024</span>
      </div>
      {{#each footer}}
      <div class="footer_links">
          <span class="footer_title">{{title}}</span>
          {{>nav list=links isVertical=true}}
      </div>
      {{/each}}
    </footer>
  

