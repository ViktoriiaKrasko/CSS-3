{{! 
Це код container файлу для index сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
 }}


    
      <header class='header'>
       <div class="header_logo">
         {{> logo}}
       </div>
        <nav class='header_nav'>
          <div class="header_nav_right">
            {{>nav list=header}}
          </div>
        </nav>
      </header>
      
    {{#with main}}
      <main class="main">
        <div class="main_content">
          <img src="{{image}}" alt="random image" class="main_image">
          <div class="main_text">
            <h1 class="main_title">{{heading}}</h1>
            <p class="main_description">{{description}}</p>
            <div class="form_action">
              <a href="{{href}}" class="button main_button">{{button}}</a>
           </div>
          </div>
        </div>
      </main>
    {{/with}}

    <section class="featured">
      {{#each featured}}
        {{> cardBlog img=photo title=heading text=info href=linkUrl button=linkText}}
      {{/each}}
    </section>

    
    <div class="form">
      {{#each actions}}
      <div class="form_content">
        <h3 class="form_title">{{heading}}</h3>
         <a href="{{url}}" class="button form_button">{{text}}</a>
      </div>
      {{/each}}
    </div>
  
    
    <footer class="footer">      
      <div class="footer_logo">
        {{> logo}}
        <span class="footer_copyright">Copyright 2023-2024</span>
      </div>
      {{#each footer}}
      <div class="footer_links">
          <span class="footer_title">{{title}}</span>
          {{>nav list=links isVertical=true}}
      </div>
      {{/each}}
    </footer>
  

